<!DOCTYPE html>
<html>
  <head>
    <title>Tilt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="navbar d-flex flex-column flex-md-row align-items-center p-4 px-md-4 bg-white border-bottom header-box-shadow fixed-top">
      <h5 class="my-0 mr-md-auto font-weight-normal">TILT</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="javascript:;">New song</a>
        <a class="p-2 text-dark" href="javascript:;">Playlists</a>
      </nav>
      <div class="dropdown">
        <a class="p-2 text-dark bg-white dropdown-toggle" id="settingsDropdown" data-toggle="dropdown" aria-expanded="false">
          <i class="mdi mdi-settings"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="settingsDropdown">
          <a class="dropdown-item" href="javascript:;">Profile</a>
          <a class="dropdown-item" href="javascript:;">Settings</a>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
          <% end %>
        </div>
      </div>
    </div>

    <main role="main" class="container-fluid headbar-clearfix">
      <%= yield %>
    </main>

  </body>
</html>
